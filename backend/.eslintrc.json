{
  "env": {
    "browser": true,
    "es2021": true
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "extends": [
    "eslint:recommended",
    "plugin:prettier/recommended"
  ],
  "overrides": [],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto",
        "singleAttributePerLine": true
      }
    ],
    "curly": "error",
    "camelcase": "error",
    "eqeqeq": "error",
    "no-undef": "off",
    "no-unused-vars": "warn",
    "no-useless-escape": "off",
    "object-curly-newline": [
      "error",
      {
        "ObjectExpression": "always",
        "ObjectPattern": {
          "multiline": true
        }
      }
    ]
  },
  "ignorePatterns": [
    "node_modules",
    "dist"
  ]
}
